{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5"],
    "allowJs": true,
    "outDir": "./src/build", 
    "rootDir": "./src",      
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}